<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="80dp">

    <FrameLayout
        android:id="@+id/player_toc_chapter_item_is_current_container"
        android:layout_width="48dp"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/player_toc_chapter_item_is_current"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_gravity="center_vertical"
            android:layout_margin="16dp"
            android:clickable="false"
            android:focusable="false"
            android:importantForAccessibility="no"
            android:src="@drawable/circle"
            android:tintMode="multiply"
            app:tint="@color/PalaceTextColor" />

    </FrameLayout>

    <TextView
        android:id="@+id/player_toc_chapter_item_view_title"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_marginEnd="16dp"
        android:layout_weight="1"
        android:clickable="false"
        android:ellipsize="end"
        android:focusable="false"
        android:gravity="center_vertical"
        android:importantForAccessibility="no"
        android:lines="1"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/player_toc_chapter_item_duration"
        app:layout_constraintStart_toEndOf="@id/player_toc_chapter_item_is_current_container"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Very long placeholder text that should never be seen in practice." />

    <TextView
        android:id="@+id/player_toc_chapter_item_duration"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        android:gravity="center"
        android:importantForAccessibility="no"
        android:textSize="18sp"
        android:visibility="visible"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/player_toc_item_controls"
        app:layout_constraintStart_toEndOf="@id/player_toc_chapter_item_view_title"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="00:00:00" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/player_toc_item_controls"
        android:layout_width="96dp"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- The controls when a reading order item is in the initial ("not downloaded") state. -->
        <androidx.constraintlayout.widget.ConstraintLayout
            tools:visibility="visible"
            android:id="@+id/player_toc_item_controls_initial"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/player_toc_item_controls_initial_refresh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:clickable="true"
                android:focusable="true"
                android:tintMode="multiply"
                android:src="@drawable/round_arrow"
                android:visibility="visible"
                app:tint="@color/PalaceTextColor" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- The controls when a reading order item is in the downloading state. -->
        <androidx.constraintlayout.widget.ConstraintLayout
            tools:visibility="visible"
            android:id="@+id/player_toc_item_controls_downloading"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/player_toc_item_controls_downloading_cancel"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:clickable="false"
                android:focusable="false"
                android:src="@drawable/cancel"
                android:tintMode="multiply"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/player_toc_item_controls_downloading_progress"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/PalaceTextColor" />

            <org.librarysimplified.audiobook.views.PlayerCircularProgressView
                android:id="@+id/player_toc_item_controls_downloading_progress"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_marginEnd="16dp"
                android:clickable="false"
                android:focusable="false"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- The controls when a reading order item is in the download failed state. -->
        <androidx.constraintlayout.widget.ConstraintLayout
            tools:visibility="visible"
            android:id="@+id/player_toc_item_controls_download_failed"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/player_toc_item_controls_download_failed_error"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="8dp"
                android:clickable="false"
                android:focusable="false"
                android:src="@drawable/baseline_error_24"
                android:tintMode="multiply"
                android:contentDescription="@string/audiobook_accessibility_toc_chapter_failed_download"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/player_toc_item_controls_download_failed_refresh"
                app:layout_constraintTop_toTopOf="parent"
                app:tint="@color/PalaceTextColor" />

            <ImageView
                android:id="@+id/player_toc_item_controls_download_failed_refresh"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginEnd="16dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:clickable="true"
                android:focusable="true"
                android:tintMode="multiply"
                android:src="@drawable/round_arrow"
                android:visibility="visible"
                app:tint="@color/PalaceTextColor" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- The controls when a reading order item is in the downloaded state. -->
        <androidx.constraintlayout.widget.ConstraintLayout
            tools:visibility="gone"
            android:id="@+id/player_toc_item_controls_downloaded"
            android:layout_height="0dp"
            android:layout_width="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
